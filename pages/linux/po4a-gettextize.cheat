% po4a-gettextize, linux

# Convert a text file to PO file
po4a-gettextize --format <text> --master <path_to_master_txt> --po <path_to_result_po>

# Get a list of available formats
po4a-gettextize --help-format

# Convert a text file along with a translated document to a PO file (`-l` option can be provided multiple times)
po4a-gettextize --format <text> --master <path_to_master_txt> --localized <path_to_translated_txt> --po <path_to_result_po>
