% fio, common

# Test random reads
sudo fio --filename=<path_to_file> --direct=1 --rw=randread --bs=4k --ioengine=libaio --iodepth=256 --runtime=120 --numjobs=4 --time_based --group_reporting --name=<job_name> --eta-newline=1 --readonly

# Test sequential reads
sudo fio --filename=<path_to_file> --direct=1 --rw=read --bs=4k --ioengine=libaio --iodepth=256 --runtime=120 --numjobs=4 --time_based --group_reporting --name=<job_name> --eta-newline=1 --readonly

# Test random read/write
sudo fio --filename=<path_to_file> --size=500GB --direct=1 --rw=randrw --bs=4k --ioengine=libaio --iodepth=256 --runtime=120 --numjobs=4 --time_based --group_reporting --name=<job_name> --eta-newline=1
